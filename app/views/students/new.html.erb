			   	  var td2 = $("<td></td>");
			   	  var td3 = $("<td></td>");
			   	  var td4 = $("<td></td>");
			   	  var td5 = $("<td></td>");
			   	  var td6 = $("<td></td>");
			   	  var td7 = $("<td></td>");
			   	  var td8 = $("<td></td>");
			   	  var td9 = $("<td></td>");
			   	  td1.text(data["id"]);
			   	  td2.text(data["sid"]);
			   	  td3.text(data["dept"]);
			   	  td4.text(data["maths"]);
			   	  td5.text(data["physics"]);

	<script type="text/javascript">
		function newStudent() {	
			$.ajax({
			   url: 'http://localhost:3000/students/new',
			   data: {},
			   type: 'GET',
			   error: function() {
			   		debugger
			      $('#info').html('<p>An error has occurred</p>');
